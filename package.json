{
  "name": "typewritesomething",
  "version": "1.0.4",
  "description": "A minimalist typewriter simulator to inspire creative writing",
  "private": true,
  "scripts": {
    "start": "npm run watch",
    "build": "deno run --allow-env --allow-read --allow-run ./build.ts",
    "check": "deno check --unstable-sloppy-imports ./src",
    "lint": "deno lint ./src",
    "test:coverage": "jest --coverage",
    "test": "jest",
    "watch": "npm-run-all -p watch:*",
    "watch:js": "deno task build -- --watch",
    "watch:browser": "browser-sync start --config bs-config.js"
  },
  "dependencies": {
    "howler": "^2.2.4",
    "lz-string": "^1.5.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^7.31.2",
    "@types/howler": "^2.2.11",
    "@types/jest": "^27.5.2",
    "@types/lz-string": "^1.5.0",
    "@types/node": "^14.18.63",
    "browser-sync": "^2.29.3",
    "browser-sync-console": "^1.0.2",
    "esbuild": "^0.24.0",
    "husky": "^4.3.8",
    "jest": "^27.5.1",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^27.1.5",
    "tslib": "^2.6.2",
    "typescript": "^5.6.3"
  },
  "homepage": "https://typewritesomething.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/bozdoz/typewritesomething"
  },
  "bugs": {
    "url": "https://github.com/bozdoz/typewritesomething/issues"
  },
  "keywords": [
    "typewriter",
    "simulator",
    "typewritesomething",
    "creative",
    "writing"
  ],
  "author": "Benjamin J DeLong",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(js|ts)": [
      "deno lint --fix",
      "deno fmt"
    ]
  },
  "engines": {
    "node": ">=20"
  }
}
